/* pages/list/index.wxss */
.container {
  position: relative;
  background-color: #eeeeee;
  padding: 25rpx;
}

.product_list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;

}

.product_list image {
  display: block;
  width: 100%;
  height: 392rpx;
}
.product_text {
  display: flex;
  flex-direction: column;
}

.product_list text {
  margin-left: 10rpx;
  margin-top: 5rpx;
  font-size: 34rpx;
  color: #787878;
}

.detail_button {
  position: absolute;
  right: 50rpx;
  bottom: 30rpx;
  border-radius: 10rpx;
  color: #0000ff;
  background-color: #ffffff;
}
